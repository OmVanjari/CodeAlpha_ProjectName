import random

def hangman():
    words = ["python", "flask", "random", "string", "loop"]
    word = random.choice(words) 
    guessed = ["_"] * len(word) 
    attempts = 6  

    print("ğŸ® Welcome to Hangman!")
    print("Guess the word:", " ".join(guessed))

    while attempts > 0 and "_" in guessed:
        guess = input("Enter a letter: ").lower()

        if len(guess) != 1 or not guess.isalpha():
            print("âš ï¸ Please enter a single alphabet letter.")
            continue

        if guess in word:
            for i in range(len(word)):
                if word[i] == guess:
                    guessed[i] = guess
            print("âœ… Correct guess!")
        else:
            attempts -= 1
            print(f"âŒ Wrong guess! Attempts left: {attempts}")

        print("Word:", " ".join(guessed))

    if "_" not in guessed:
        print("ğŸ‰ Congratulations! You guessed the word:", word)
    else:
        print("ğŸ’€ Game Over! The word was:", word)

hangman()
